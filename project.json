{
	"core": {
		"filesExclude": ["./docs/"]
	},
	"watch": {
		"rules": {
			"cmd": {
				"files": ["cmd/*"],
				"tasks": "npm run build --prefix cmd"
			},
			"compiler": {
				"files": ["compiler/*"],
				"tasks": "npm run build --prefix compiler"
			},
			"std": {
				"files": ["std/*"],
				"tasks": "cd std && ./build.sh"
			},
			"cli": {
				"files": ["cli/*"],
				"tasks": "npm run build --prefix cli"
			},
			"gbx": {
				"files": ["gbx/*"],
				"tasks": "npm run build --prefix gbx"
			},
			"sdk": {
				"files": ["sdk/*"],
				"tasks": "npm run build --prefix sdk"
			},
			"html": {
				"files": ["html/*"],
				"tasks": "npm run build --prefix html"
			},
			"markdown": {
				"files": ["markdown/*"],
				"tasks": "npm run build --prefix markdown"
			}
		}
	}
}
