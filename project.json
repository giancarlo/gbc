{
	"core": {
		"filesExclude": ["./docs/"]
	},
	"watch": {
		"rules": {
			"compiler": {
				"files": ["compiler/*"],
				"tasks": "npm run build --prefix compiler"
			},
			"compiler-next": {
				"files": ["compiler-next/*"],
				"tasks": "npm run build --prefix compiler-next"
			},
			"cli": {
				"files": ["cli/*"],
				"tasks": "npm run build --prefix cli"
			},
			"gbx": {
				"files": ["gbx/*"],
				"tasks": "npm run build --prefix gbx"
			},
			"sdk": {
				"files": ["sdk/*"],
				"tasks": "npm run build --prefix sdk"
			}
		}
	}
}
